    "zod": "3.24.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.0.3",
    "@total-typescript/tsconfig": "1.0.4",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "22.13.1",
    "@types/react": "19.0.8",
    "eslint": "9.19.0",
    "eslint-config-prettier": "10.0.1",
    "globals": "15.14.0",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "4.0.3",
    "tailwindcss-animate": "1.0.7",
